extends layout

block content
  .col-sm-6.col-sm-offset-3
    form.form(action="/register" method="POST")
      .form-group
        span Connect with: 
        a.btn.btn-twitter(href="/login/twitter") 
          i.fa.fa-twitter 
          |  Twitter
        hr
        h2.text-center Register
        label(for="name") Name 
        input.form-control(type="text" name="name" required)
        label(for="email") Email
        input.form-control(type="email" name="email" required)
        label(for="password") Password 
        input.form-control(type="password" name="password")
        label(for="password-confirm") Confirm Password
        input.form-control(type="password" name="password-confirm")
        input.btn.btn-primary(type="submit" value="Register")
        
        
